<div class="contents row">
  <% @albums.each do |album| %>
    <div class="content_post" style="background-image: url(<%= album.image %>);">
       <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_tweet_path(tweet.id) %>
          </li>
          <li>
            <%= link_to '削除', album_path(album.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
      <span class="name">
        <%= album.title %>
      </span>
    </div>
  <% end %>
</div>